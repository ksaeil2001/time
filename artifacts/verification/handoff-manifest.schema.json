{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://auto-shutdown-scheduler.local/schemas/handoff-manifest.schema.json",
  "title": "Auto Shutdown Scheduler Handoff Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at",
    "repo_root",
    "origin_url",
    "branch",
    "base_sha",
    "head_sha",
    "result",
    "verification_commands"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "repo_root": {
      "type": "string",
      "minLength": 1
    },
    "origin_url": {
      "type": "string",
      "minLength": 1
    },
    "branch": {
      "type": "string",
      "minLength": 1
    },
    "base_sha": {
      "type": "string",
      "minLength": 7
    },
    "head_sha": {
      "type": "string",
      "minLength": 7
    },
    "result": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "summary": {
      "type": "string"
    },
    "identity_hash": {
      "type": "string"
    },
    "preflight": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/checkResult"
      }
    },
    "verification_commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/commandResult"
      }
    }
  },
  "$defs": {
    "checkResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "status",
        "detail"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "warn"
          ]
        },
        "detail": {
          "type": "string"
        }
      }
    },
    "commandResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "command",
        "status",
        "started_at",
        "ended_at"
      ],
      "properties": {
        "command": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "skipped"
          ]
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
